<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.socialmedia.view.RegisterView"
            prefHeight="400.0" prefWidth="600.0"
            fx:id="createUserWindow">
    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Username:" />
            <TextField fx:id="rUsernameField" />

            <Label text="E-Mail:" />
            <TextField fx:id="rEmailField" />

            <Label text="Password:" />
            <PasswordField fx:id="rPasswordField"/>
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="createUserButton" text="Create" onAction="#createUser"/>
                <Button fx:id="rCancelButton" text="Cancel"/>
                <Label fx:id="output" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
